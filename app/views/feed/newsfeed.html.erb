<% if !user_signed_in?%>
  <% controller.redirect_to "/" %>
<% end %>

<%= link_to 'Sign out', destroy_user_session_path, method: :delete%>

<%= link_to new_post_path do %>
  New post
<% end %>

<% @posts.each do |post| %>
  <p><%= simple_format(post.message)   %></p> <br>
  <p><%= post.created_at.localtime.strftime("%H:%M %d/%m/%y") %></p>
<% end %>
